#include<stdio.h>
int main()
{
    int n,i,j;
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=n;j++)
        {
            if(j==i)
            {
                printf("o");
            }
            if(j>i || j<i)
            {
                printf("x");
            }
        }
        printf("\n");
    }
}
/* if n=3
   0xx
   x0x
   xx0     */
